<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AllTextColor" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#fff</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="AllMiniText" parent="AllTextColor">
        <item name="android:drawablePadding">4dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="ForecastItemIndividual" parent="AllTextColor">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <style name="ItemImageStyle">
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_marginRight">6dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="ItemTextStyle" parent="AllMiniText">
        <item name="android:textSize">22dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

</resources>
