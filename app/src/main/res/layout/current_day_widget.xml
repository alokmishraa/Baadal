<?xml version="1.0" encoding="utf-8"?>
<com.alokmishra.baadal.view.widget.CurrentDayWeatherWidget xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/desc"
        style="@style/AllTextColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:fontFamily="sans-serif-light"
        android:textSize="24sp"
        tools:text="Mostly clear" />

    <LinearLayout
        android:id="@+id/foreacst_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/desc"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/forecast_icon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginRight="8dp"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/current_temp"
            style="@style/AllTextColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-light"
            android:textSize="48dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/city"
        style="@style/AllMiniText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/foreacst_header"
        android:layout_centerHorizontal="true"
        android:layout_margin="4dp"
        android:drawableLeft="@drawable/location" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/city"
        android:layout_marginBottom="32dp"
        android:layout_marginTop="12dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:orientation="vertical"
            android:padding="16dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal">
                <ImageView
                    style="@style/ItemImageStyle"
                    android:src="@drawable/humidity" />
                <TextView
                    android:id="@+id/humid"
                    style="@style/ItemTextStyle" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView
                    style="@style/ItemImageStyle"
                    android:src="@drawable/wind" />
                <TextView
                    android:id="@+id/wind"
                    style="@style/ItemTextStyle" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    style="@style/ItemImageStyle"
                    android:src="@drawable/high" />

                <TextView
                    android:id="@+id/high"
                    style="@style/ItemTextStyle"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView
                    style="@style/ItemImageStyle"
                    android:src="@drawable/low" />
                <TextView
                    android:id="@+id/low"
                    style="@style/ItemTextStyle" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>


</com.alokmishra.baadal.view.widget.CurrentDayWeatherWidget>